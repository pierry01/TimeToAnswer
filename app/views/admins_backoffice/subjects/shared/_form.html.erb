<h1><%= "#{action_message} #{@subject.model_name.human}" %></h1>
<br><br>

<% if @subject.errors.any? %>
  <% @subject.errors.full_messages.each do |message| %>
    <div class="alert alert-danger" role="alert">
      <li><%= message %></li>
    </div>
  <% end %>
<% end %>

<%= form_with(model: [ :admins_backoffice, @subject ], local: true) do |form| %>
  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_field :description, class:'form-control', id: 'exampleInputEmail1', placeholder: t('placeholders.subject_description') %>
  </div><br>

  <button type="submit" class="btn btn-primary"><%= t('buttons.save') %></button>
<% end %>