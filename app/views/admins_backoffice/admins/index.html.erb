<h1><%= t('messages.listing', model: @admins.model_name.human(count: @admins.count)) %></h1>
<br>
<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col"><%= translate_attribute(@admins, :email) %></th>
      <th scope="col">
        <%= link_to new_admins_backoffice_admin_path, class: 'btn btn-success btn-circle btn-sm' do %>
          <i class="fas fa-plus"></i>
        <% end %>
      </th>
    </tr>
  </thead>

  <tbody>
    <% @admins.each do |admin| %>
      <tr>
        <th scope="row" style="width: 80px"><%= admin.id %></th>
        <td><%= admin.email %></td>
        <td style="width: 100px">
          <%= link_to edit_admins_backoffice_admin_path(admin), class: 'btn btn-primary btn-circle btn-sm' do %>
            <i class="fas fa-edit"></i>
          <% end %>

          <%= link_to admins_backoffice_admin_path(admin), method: :delete, class: 'btn btn-danger btn-circle btn-sm', data: { confirm: t('messages.confirm_with', item: admin.email) } do %>
            <i class="fas fa-trash"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="d-flex justify-content-center">
  <%= paginate @admins %>
</div>
