<div class="row justify-content-center">
  <div class="col-xl-10 col-lg-12 col-md-9">
    <div class="card o-hidden border-0 shadow-lg my-5">
      <div class="card-body p-0">
        <div class="row">
          <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
          <div class="col-lg-6">
            <div class="p-5">
              <div class="text-center">
                <h1 class="h4 text-gray-900 mb-4">Sign up</h1>
              </div>

              <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: 'user') do |f| %>
                <div class="form-group">
                  <%= f.email_field :email, autofocus: true, id: 'exampleInputEmail', placeholder: "E-mail", class: 'form-control form-control-user' %>
                </div>

                <div class="form-group">
                  <%= f.password_field :password, placeholder: 'Senha', class: 'form-control form-control-user', id: 'exampleInputPassword' %>
                </div>

                <div class="form-group">
                  <%= f.password_field :password_confirmation, placeholder: 'Confirme a senha', class: 'form-control form-control-user', id: 'exampleInputPassword' %>
                </div>

                <%= f.submit 'Sign up', class: 'btn btn-primary btn-user btn-block' %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>