<section class="jumbotron text-center", style="margin-top: 35px">
  <div>
    <% unless params[:term] %>
      <h3>Ãšltimas perguntas cadastradas...</h3>
    <% else %>
      <h3>Resultados para o termo "<%= params[:term] %>"...</h3>
    <% end %>
  </div>
</section>

<% @questions.each do |question| %>
  <%= form_with url: site_answer_path do |form| %>
    <div class="card" style="margin-top: 35px">
      <div class="card-header"><%= question.description %></div>

      <ul class="questions">
        <% question.answers.each do |answer| %>
          <div class="form-check">
            <label class="card-body">
              <%= radio_button_tag 'answer_id', answer.id %>
              <%= answer.description %>
            </label>
          </div>
        <% end %>

        <%= form.submit 'Responder', class: 'btn btn-light', id: "submit_#{question.id}" %>
      </ul>
    </div>
  <% end %>
<% end %>
<br>
<div class="d-flex justify-content-center">
  <%= paginate @questions %>
</div>